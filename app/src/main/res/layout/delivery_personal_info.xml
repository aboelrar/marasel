<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/splash"
        tools:context=".Drivers.UI.DeliveryPersonalInfo.UI.DeliveryPersonalInfo">

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <LinearLayout
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_80sdp"
                android:orientation="horizontal"
                android:weightSum="1">

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="@dimen/_20sdp"
                    android:layout_gravity="center"
                    android:layout_weight=".2"
                    android:padding="@dimen/_5sdp"
                    android:src="@drawable/back" />


                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight=".75"
                    android:orientation="horizontal"
                    android:weightSum="1">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight=".7"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/catTitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="Work As A Star"
                            android:textColor="@android:color/black"
                            android:textSize="@dimen/_17sdp" />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight=".3">

                        <Switch
                            android:id="@+id/switcher"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_25sdp"
                            android:layout_gravity="center"
                            android:checked="true"
                            android:textColor="@android:color/white" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_35sdp"
                android:layout_marginLeft="@dimen/_15sdp"
                android:layout_marginRight="@dimen/_15sdp"
                android:background="@color/t_color"
                android:weightSum="1"
                android:paddingLeft="@dimen/_5sdp"
                android:paddingRight="@dimen/_5sdp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="@dimen/_27sdp"
                    android:layout_weight=".15"
                    android:src="@drawable/moto" />

                <TextView
                    android:layout_gravity="center|left"
                    android:layout_weight=".85"
                    android:textSize="@dimen/_11sdp"
                    android:textColor="@android:color/black"
                    android:text="@string/the_mode_of_work_has_been_activated_as_a_delivery_person_safety_accompanies_you"
                    android:layout_width="0dp"
                    android:layout_height="match_parent" />
            </LinearLayout>

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="@dimen/_45sdp"
                android:layout_height="@dimen/_45sdp"
                app:civ_border_color="@android:color/white"
                app:civ_border_width="@dimen/_2sdp"
                android:layout_gravity="center"
                android:id="@+id/img"
                android:layout_marginTop="@dimen/_25sdp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_30sdp"
                android:gravity="center"
                android:layout_marginTop="@dimen/_8sdp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/the_balance_of_receivables"
                    android:textSize="@dimen/_11sdp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/f_color"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:id="@+id/balance"
                    android:textSize="@dimen/_11sdp" />
            </LinearLayout>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="@dimen/_90sdp"
                android:layout_margin="@dimen/_10sdp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_30sdp"
                        android:gravity="center"
                        android:layout_marginTop="@dimen/_8sdp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/delivery_person_name"
                            android:textSize="@dimen/_11sdp" />

                        <TextView
                            android:layout_marginLeft="@dimen/_5sdp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/personal_name"
                            android:textColor="@color/f_color"
                            android:textSize="@dimen/_11sdp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_60sdp"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:weightSum="3">

                        <LinearLayout
                            android:layout_weight=".8"
                            android:layout_width="0dp"
                            android:gravity="center"
                            android:layout_height="match_parent">

                            <TextView
                                android:gravity="center|left"
                                android:drawableLeft="@drawable/star"
                                android:drawablePadding="@dimen/_5sdp"
                                android:layout_gravity="center"
                                android:id="@+id/star"
                                android:textSize="@dimen/_11sdp"
                                android:layout_width="wrap_content"
                                android:paddingRight="@dimen/_5sdp"
                                android:layout_height="wrap_content" />
                        </LinearLayout>

                        <ImageView
                            android:layout_width="0dp"
                            android:layout_height="@dimen/_20sdp"
                            android:layout_weight=".01"
                            android:background="@android:color/darker_gray" />

                        <LinearLayout
                            android:layout_weight="1.2"
                            android:layout_width="0dp"
                            android:gravity="center"
                            android:layout_height="match_parent">

                            <TextView
                                android:gravity="center|left"
                                android:drawableLeft="@drawable/car"
                                android:paddingLeft="@dimen/_5sdp"
                                android:drawablePadding="@dimen/_5sdp"
                                android:id="@+id/orders_count"
                                android:textSize="@dimen/_11sdp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />
                        </LinearLayout>

                        <ImageView
                            android:layout_width="0dp"
                            android:layout_height="@dimen/_20sdp"
                            android:layout_weight=".01"
                            android:background="@android:color/darker_gray" />

                        <LinearLayout
                            android:layout_weight=".8"
                            android:layout_width="0dp"
                            android:gravity="center"
                            android:layout_height="match_parent">

                            <TextView
                                android:gravity="center|left"
                                android:drawableLeft="@drawable/icon_awesome_user_check_blue"
                                android:paddingLeft="@dimen/_5sdp"
                                android:drawablePadding="@dimen/_5sdp"
                                android:id="@+id/rate_counts"
                                android:textSize="@dimen/_10sdp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />
                        </LinearLayout>

                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:weightSum="1"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:layout_marginLeft="@dimen/_10sdp"
                android:gravity="left|center"
                android:orientation="horizontal">

                <ImageView
                    android:layout_weight=".15"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/_30sdp"
                    android:src="@drawable/icon_notifcations" />

                <Switch
                    android:layout_weight=".85"
                    android:layout_width="0dp"
                    android:textColor="@android:color/darker_gray"
                    android:layout_height="match_parent"
                    android:id="@+id/notifcations"
                    android:text="@string/notifcation_tones"
                    android:textSize="@dimen/_16sdp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:weightSum="1"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:layout_marginLeft="@dimen/_10sdp"
                android:gravity="left|center"
                android:orientation="horizontal">

                <ImageView
                    android:layout_weight=".15"
                    android:layout_width="0dp"
                    android:padding="@dimen/_3sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:src="@drawable/marker_location" />

                <Switch
                    android:layout_weight=".85"
                    android:layout_width="0dp"
                    android:textColor="@android:color/darker_gray"
                    android:id="@+id/share_location"
                    android:layout_height="match_parent"
                    android:text="@string/share_your_location"
                    android:textSize="@dimen/_16sdp" />

            </LinearLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_80sdp"
                android:paddingRight="@dimen/_10sdp"
                android:layout_marginBottom="@dimen/_50sdp"
                android:gravity="center"
                android:paddingLeft="@dimen/_10sdp">
                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_60sdp"
                    app:cardElevation="0dp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:id="@+id/goAvailableOrder"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:layout_marginLeft="@dimen/_10sdp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableRight="@drawable/icon_big_car"
                        android:textSize="@dimen/_11sdp"
                        android:paddingLeft="@dimen/_3sdp"
                        android:paddingRight="@dimen/_9sdp"
                        android:layout_gravity="center|left"
                        android:drawablePadding="@dimen/_5sdp"
                        android:text="@string/ready_requests_for_presentation_and_delivery"/>
                </androidx.cardview.widget.CardView>
                <TextView
                    android:layout_width="@dimen/_25sdp"
                    android:layout_height="@dimen/_25sdp"
                    android:layout_alignParentRight="true"
                    android:id="@+id/total_available_orders"
                    android:textStyle="bold"
                    android:layout_marginRight="@dimen/_14sdp"
                    android:layout_marginTop="@dimen/_2sdp"
                    android:gravity="center"
                    android:background="@drawable/number_of_available_orders"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/_12sdp"/>
            </RelativeLayout>
        </LinearLayout>
        </androidx.core.widget.NestedScrollView>

    </FrameLayout>
</layout>