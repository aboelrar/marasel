<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/splash"
        tools:context=".Drivers.UI.AddOffer.UI.AddOffer">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_80sdp"
                android:orientation="horizontal"
                android:weightSum="1">

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="@dimen/_20sdp"
                    android:layout_gravity="center"
                    android:layout_weight=".2"
                    android:padding="@dimen/_5sdp"
                    android:src="@drawable/back" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight=".75"
                    android:orientation="horizontal"
                    android:weightSum="1">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight=".8"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/catTitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="@string/add_offer"
                            android:textColor="@android:color/black"
                            android:textSize="@dimen/_17sdp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/_11sdp"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:id="@+id/orderNum"
                            android:text="@string/order_number" />

                    </LinearLayout>


                </LinearLayout>

            </LinearLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_180sdp">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    app:cardElevation="0dp"
                    android:layout_centerInParent="true"
                    android:layout_height="@dimen/_140sdp"
                    android:layout_margin="@dimen/_10sdp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_30sdp"
                            android:gravity="center"
                            android:layout_marginTop="@dimen/_30sdp"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/delivery_person_name"
                                android:textSize="@dimen/_11sdp" />

                            <TextView
                                android:layout_marginLeft="@dimen/_5sdp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/personal_name"
                                android:textColor="@color/f_color"
                                android:textSize="@dimen/_11sdp" />
                        </LinearLayout>

                        <androidx.recyclerview.widget.RecyclerView
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_40sdp"
                            android:id="@+id/orderList" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_30sdp"
                            android:orientation="horizontal"
                            android:gravity="center"
                            android:weightSum="3">

                            <LinearLayout
                                android:layout_weight="1.8"
                                android:layout_width="0dp"
                                android:gravity="center"
                                android:layout_height="match_parent">

                                <TextView
                                    android:gravity="center|left"
                                    android:drawableLeft="@drawable/location_pin"
                                    android:drawablePadding="@dimen/_5sdp"
                                    android:layout_gravity="center"
                                    android:id="@+id/location"
                                    android:textSize="@dimen/_11sdp"
                                    android:layout_width="wrap_content"
                                    android:paddingRight="@dimen/_5sdp"
                                    android:layout_height="wrap_content" />
                            </LinearLayout>

                            <ImageView
                                android:layout_width="0dp"
                                android:layout_height="@dimen/_20sdp"
                                android:layout_weight=".01"
                                android:background="@android:color/darker_gray" />

                            <LinearLayout
                                android:layout_weight="1.2"
                                android:layout_width="0dp"
                                android:gravity="center"
                                android:layout_height="match_parent">

                                <TextView
                                    android:gravity="center|left"
                                    android:drawableLeft="@drawable/icon_time_available_orders"
                                    android:paddingLeft="@dimen/_5sdp"
                                    android:drawablePadding="@dimen/_5sdp"
                                    android:id="@+id/delivery_time"
                                    android:textSize="@dimen/_11sdp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content" />
                            </LinearLayout>


                        </LinearLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <com.facebook.shimmer.ShimmerFrameLayout
                    android:layout_width="@dimen/_50sdp"
                    android:layout_height="@dimen/_50sdp"
                    android:layout_centerInParent="true"
                    android:layout_alignParentTop="true"
                    android:id="@+id/shimmer_view_container">
                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="@dimen/_50sdp"
                    android:layout_height="@dimen/_50sdp"
                    android:id="@+id/brandImg"
                    android:src="@drawable/secondary_logo"
                     />
                </com.facebook.shimmer.ShimmerFrameLayout>
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_120sdp"
                android:weightSum="1"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_weight=".495"
                    android:layout_width="0dp"
                    android:orientation="vertical"
                    android:padding="@dimen/_10sdp"
                    android:layout_height="match_parent">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@drawable/dollar"
                        android:text="@string/delivery_price"
                        android:layout_gravity="center"
                        android:textSize="@dimen/_15sdp"
                        android:drawablePadding="@dimen/_5sdp"
                        android:id="@+id/delivery_price"
                        android:textColor="@android:color/black" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_100sdp"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <androidx.cardview.widget.CardView
                            android:layout_width="@dimen/_40sdp"
                            android:layout_height="@dimen/_40sdp"
                            app:cardElevation="0dp"
                            >

                            <EditText
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:hint="@string/price"
                                android:id="@+id/price"
                                android:gravity="center"
                                android:inputType="number"
                                android:background="@android:color/white" />

                        </androidx.cardview.widget.CardView>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/_14sdp"
                            android:layout_gravity="center"
                            android:layout_marginLeft="@dimen/_5sdp"
                            android:textColor="@color/f_color"
                            android:text="@string/egp" />
                    </LinearLayout>
                </LinearLayout>

                <ImageView
                    android:layout_weight=".005"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:src="#D3D3D3" />

                <LinearLayout
                    android:layout_weight=".495"
                    android:layout_width="0dp"
                    android:orientation="vertical"
                    android:padding="@dimen/_10sdp"
                    android:layout_height="match_parent">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@drawable/time_offer"
                        android:text="@string/delivery_time"
                        android:layout_gravity="center"
                        android:textSize="@dimen/_15sdp"
                        android:drawableTint="@android:color/black"
                        android:drawablePadding="@dimen/_5sdp"
                        android:textColor="@android:color/black" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_100sdp"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <androidx.cardview.widget.CardView
                            android:layout_width="@dimen/_40sdp"
                            android:layout_height="@dimen/_40sdp"
                            app:cardElevation="0dp"
                            >

                            <EditText
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:hint="@string/time"
                                android:id="@+id/time"
                                android:gravity="center"
                                android:inputType="datetime"
                                android:background="@android:color/white" />

                        </androidx.cardview.widget.CardView>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/_14sdp"
                            android:layout_gravity="center"
                            android:layout_marginLeft="@dimen/_5sdp"
                            android:textColor="@color/f_color"
                            android:text="@string/hour" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                app:cardElevation="0dp"
                android:layout_height="@dimen/_90sdp"
                android:layout_marginTop="@dimen/_25sdp"
                android:layout_marginRight="@dimen/_15sdp"
                android:layout_marginLeft="@dimen/_15sdp">

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@android:color/white"
                    android:hint="@string/write_your_notes"
                    android:gravity="left"
                    android:textSize="@dimen/_13sdp"
                    android:id="@+id/write_notes"
                    android:padding="@dimen/_10sdp" />
            </androidx.cardview.widget.CardView>

            <Button
                android:layout_width="@dimen/_100sdp"
                android:layout_height="@dimen/_35sdp"
                android:layout_gravity="center"
                android:background="@drawable/t_button_bg"
                android:text="@string/submit_offer"
                android:id="@+id/submit_offer"
                android:textSize="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_15sdp"
                android:textAllCaps="false"
                android:textColor="@android:color/white"/>

        </LinearLayout>
    </FrameLayout>
</layout>