<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainScreen.ui.Offers.UI.Offers">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/splash"
            android:orientation="vertical">

            <LinearLayout
                android:weightSum="1"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_70sdp">

                <ImageView
                    android:src="@drawable/back"
                    android:layout_weight=".2"
                    android:layout_gravity="center"
                    android:layout_width="0dp"
                    android:padding="@dimen/_5sdp"
                    android:layout_height="@dimen/_20sdp" />


                <LinearLayout
                    android:layout_weight=".75"
                    android:layout_width="0dp"
                    android:orientation="horizontal"
                    android:weightSum="1"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:layout_weight=".7"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Star Backs"
                            android:id="@+id/catTitle"
                            android:layout_gravity="center"
                            android:textSize="@dimen/_17sdp"
                            android:textColor="@android:color/black" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Order Number 10575288"
                            android:id="@+id/orderNum"
                            android:layout_gravity="center"
                            android:textSize="@dimen/_11sdp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight=".3">

                        <Button
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_25sdp"
                            android:layout_gravity="center"
                            android:background="@drawable/t_button_bg"
                            android:text="Wait Offer"
                            android:id="@+id/offer_button"
                            android:textSize="@dimen/_10sdp"
                            android:textAllCaps="false"
                            android:textColor="@android:color/white" />
                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="@dimen/_90sdp"
                android:layout_margin="@dimen/_10sdp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/order_details"
                        android:gravity="center"
                        android:layout_marginTop="@dimen/_10sdp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_60sdp"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:weightSum="3">

                        <LinearLayout
                            android:layout_weight="1.3"
                            android:layout_width="0dp"
                            android:gravity="center"
                            android:layout_height="match_parent">

                            <TextView
                                android:gravity="center|left"
                                android:drawableLeft="@drawable/marker_offer"
                                android:drawablePadding="@dimen/_3sdp"
                                android:text="2 emad eldeen adeep"
                                android:layout_gravity="center"
                                android:id="@+id/address"
                                android:textSize="@dimen/_10sdp"
                                android:layout_width="wrap_content"
                                android:paddingRight="@dimen/_5sdp"
                                android:layout_height="wrap_content" />
                        </LinearLayout>

                        <ImageView
                            android:layout_width="0dp"
                            android:layout_height="@dimen/_20sdp"
                            android:layout_weight=".01"
                            android:background="@android:color/darker_gray" />

                        <LinearLayout
                            android:layout_weight=".8"
                            android:layout_width="0dp"
                            android:gravity="center"
                            android:layout_height="match_parent">

                            <TextView
                                android:gravity="center|left"
                                android:drawableLeft="@drawable/time_offer"
                                android:paddingLeft="@dimen/_5sdp"
                                android:drawablePadding="@dimen/_5sdp"
                                android:text="2 hours"
                                android:id="@+id/hours"
                                android:textSize="@dimen/_10sdp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />
                        </LinearLayout>

                        <ImageView
                            android:layout_width="0dp"
                            android:layout_height="@dimen/_20sdp"
                            android:layout_weight=".01"
                            android:background="@android:color/darker_gray" />

                        <LinearLayout
                            android:layout_weight=".8"
                            android:layout_width="0dp"
                            android:gravity="center"
                            android:layout_height="match_parent">

                            <TextView
                                android:gravity="center|left"
                                android:drawableLeft="@drawable/coffie_offer"
                                android:paddingLeft="@dimen/_5sdp"
                                android:drawablePadding="@dimen/_3sdp"
                                android:text="2 hours"
                                android:id="@+id/type"
                                android:textSize="@dimen/_10sdp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />
                        </LinearLayout>

                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <androidx.recyclerview.widget.RecyclerView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/offer_list" />

                <Button
                    android:layout_width="@dimen/_90sdp"
                    android:layout_height="@dimen/_35sdp"
                    android:layout_alignParentBottom="true"
                    android:text="@string/cancel_order"
                    android:textAllCaps="false"
                    android:id="@+id/cancel_order"
                    android:textSize="@dimen/_12sdp"
                    android:textColor="@android:color/white"
                    android:layout_centerInParent="true"
                    android:layout_marginBottom="@dimen/_30sdp"
                    android:background="@drawable/cancel_order_btn" />
            </RelativeLayout>
        </LinearLayout>

    </FrameLayout>
</layout>