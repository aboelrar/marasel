<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:orientation="vertical"
    android:layout_width="@dimen/_130sdp"
    android:layout_height="@dimen/_185sdp"
    android:id="@+id/item"
    android:layout_marginRight="@dimen/_4sdp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.facebook.shimmer.ShimmerFrameLayout
        android:id="@+id/shimmer_view_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
    <androidx.cardview.widget.CardView
        android:layout_width="@dimen/_130sdp"
        android:layout_height="@dimen/_150sdp"
        android:layout_marginTop="@dimen/_25sdp"
        app:cardUseCompatPadding="true"
        app:cardElevation="0dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:weightSum="1"
            android:orientation="vertical"
            >
            <View
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.15"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:text="Zacks"
                android:id="@+id/title"
                android:layout_weight="0.2"
                android:textColor="@color/f_color"
                android:textSize="@dimen/_17sdp"
                android:gravity="center"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.4"
                android:weightSum="3"
                android:paddingLeft="@dimen/_5sdp"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:text="resturant"
                    android:id="@+id/type"
                    android:drawablePadding="@dimen/_5sdp"
                    android:drawableLeft="@drawable/coffe"
                    android:textSize="@dimen/_12sdp"
                    android:gravity="center|left"
                    android:layout_weight="1"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:text="40 om"
                    android:id="@+id/distance"
                    android:drawablePadding="@dimen/_5sdp"
                    android:drawableLeft="@drawable/marker"
                    android:textSize="@dimen/_12sdp"
                    android:gravity="center|left"
                    android:layout_weight="1"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:text="4.3"
                    android:id="@+id/rate"
                    android:drawablePadding="@dimen/_5sdp"
                    android:drawableLeft="@drawable/star"
                    android:textSize="@dimen/_12sdp"
                    android:gravity="center|left"
                    android:layout_weight="1"/>
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
    </com.facebook.shimmer.ShimmerFrameLayout>
    <Button
        android:layout_width="@dimen/_100sdp"
        android:layout_height="@dimen/_30sdp"
        android:text="free delivery"
        android:textColor="@android:color/white"
        android:textAllCaps="false"
        android:textSize="@dimen/_14sdp"
        android:id="@+id/free_delivery"
        android:background="@drawable/t_button_bg"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        />

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="@dimen/_50sdp"
        android:layout_height="@dimen/_50sdp"
        android:id="@+id/store_item"
        android:layout_centerInParent="true"
        app:civ_border_color="@android:color/white"
        app:civ_border_width="@dimen/_2sdp"
        android:layout_alignParentTop="true"
        android:src="@drawable/marker"/>

</RelativeLayout>