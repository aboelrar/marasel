<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_65sdp"
    android:layout_marginRight="@dimen/_7sdp"
    android:layout_marginLeft="@dimen/_7sdp"
    app:elevation="@dimen/_4sdp"
    app:cardElevation="@dimen/_4sdp"
    android:layout_marginTop="@dimen/_10sdp"
    app:cardCornerRadius="@dimen/_7sdp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >
    <com.facebook.shimmer.ShimmerFrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/shimmer_view_container">
    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1"
    android:id="@+id/item"
    android:orientation="horizontal">
    <ImageView
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight=".2"
        android:id="@+id/img"
        android:scaleType="centerCrop"
        android:layout_margin="@dimen/_2sdp"
        android:padding="@dimen/_6sdp"
        android:src="@drawable/secondary_logo"
        />
    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight=".21"
        android:textSize="@dimen/_11sdp"
        android:id="@+id/title"
        android:gravity="center"
        android:layout_gravity="center"
        android:textColor="@color/f_color"
        android:text="resturant"/>
    <View
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight=".05"/>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="@dimen/_70sdp"
        android:layout_weight=".52"
        android:gravity="center"
        android:weightSum="3"
        android:paddingTop="@dimen/_5sdp"
        android:paddingBottom="@dimen/_5sdp"
        android:layout_gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:text="40 om"
            android:id="@+id/address"
            android:maxLines="2"
            android:layout_gravity="center"
            android:ellipsize="end"
            android:drawablePadding="@dimen/_5sdp"
            android:drawableLeft="@drawable/marker"
            android:textSize="@dimen/_11sdp"
            android:gravity="center|left"
            android:layout_weight="1.5"/>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:text="4.3"
            android:id="@+id/status"
            android:ellipsize="end"
            android:drawablePadding="@dimen/_5sdp"
            android:drawableLeft="@drawable/small_basket_one"
            android:textSize="@dimen/_11sdp"
            android:gravity="center|left"
            android:layout_weight="1.5"/>
    </LinearLayout>

</LinearLayout>
    </com.facebook.shimmer.ShimmerFrameLayout>
</androidx.cardview.widget.CardView>