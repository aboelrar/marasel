<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_70sdp"
    android:layout_marginRight="@dimen/_7sdp"
    android:layout_marginLeft="@dimen/_7sdp"
    app:elevation="@dimen/_4sdp"
    app:cardElevation="@dimen/_4sdp"
    android:layout_marginTop="@dimen/_10sdp"
    app:cardCornerRadius="@dimen/_7sdp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="1"
        android:id="@+id/item"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".22"
            android:id="@+id/img"
            android:scaleType="centerCrop"
            android:layout_margin="@dimen/_2sdp"
            android:padding="@dimen/_6sdp"
            android:src="@drawable/coffe"
            />
        <LinearLayout
            android:layout_weight=".78"
            android:layout_width="0dp"
            android:paddingLeft="@dimen/_5sdp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:weightSum="1">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight=".3"
                android:gravity="center_vertical"
                android:orientation="horizontal">
              <TextView
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="2 cars"
                  android:textSize="@dimen/_11sdp"
                  android:drawableTint="@android:color/black"
                  android:id="@+id/product"
                  android:drawablePadding="@dimen/_5sdp"
                  android:drawableLeft="@drawable/coffie_offer"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="after one hour"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:ellipsize="end"
                    android:id="@+id/address"
                    android:textSize="@dimen/_11sdp"
                    android:drawablePadding="@dimen/_5sdp"
                    android:drawableLeft="@drawable/location_pin_small"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight=".7"
                android:weightSum="1"
                android:orientation="horizontal">
                <TextView
                    android:text="9:00 AM"
                    android:layout_weight=".6"
                    android:layout_width="0dp"
                    android:textSize="@dimen/_13sdp"
                    android:id="@+id/time"
                    android:gravity="bottom"
                    android:textColor="@android:color/black"
                    android:paddingBottom="@dimen/_5sdp"
                    android:layout_height="match_parent"/>
                <Button
                    android:layout_weight=".27"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/_27sdp"
                    android:layout_gravity="center"
                    android:background="@drawable/t_button_bg"
                    android:text="@string/submit_offer"
                    android:id="@+id/submit_offer"
                    android:textSize="@dimen/_10sdp"
                    android:textAllCaps="false"
                    android:textColor="@android:color/white"/>

            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>