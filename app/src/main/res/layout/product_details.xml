<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/s_color"
        tools:context=".MainScreen.ui.ProductDetails.Ui.ProductDetails">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/_60sdp"
            android:background="@color/f_color"
            android:id="@+id/addToCart"
            android:text="@string/add_to_cart"
            android:textColor="@android:color/white"
            android:gravity="center"
            android:textSize="@dimen/_18sdp"
            android:paddingTop="@dimen/_5sdp"

            android:layout_alignParentBottom="true" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_280sdp"
            android:layout_alignParentBottom="true"
            android:orientation="vertical"
            android:layout_marginBottom="@dimen/_50sdp"
            android:background="@drawable/product_details_bg">

            <me.relex.circleindicator.CircleIndicator
                android:id="@+id/indicator"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_48sdp"
                android:layout_alignParentStart="true"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="@dimen/_20sdp"
                android:padding="@dimen/_3sdp"
                android:layoutDirection="ltr"
                app:ci_drawable="@drawable/oookkkkk"
                android:layout_marginTop="@dimen/_50sdp"
                app:ci_drawable_unselected="@drawable/un_selected"
                app:ci_height="@dimen/_6sdp"
                app:ci_margin="@dimen/_5sdp"
                app:ci_width="@dimen/_6sdp"
                tools:ignore="RtlCompat" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:id="@+id/title"
                android:textSize="@dimen/_20sdp"
                android:textColor="@color/f_color" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="22 EGP"
                android:id="@+id/price"
                android:layout_marginTop="@dimen/_3sdp"
                android:layout_gravity="center"
                android:textSize="@dimen/_14sdp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_33sdp"
                android:paddingLeft="@dimen/_8sdp"
                android:weightSum="1"
                android:layout_marginTop="@dimen/_10sdp"
                android:orientation="horizontal">

                <TextView
                    android:layout_weight=".35"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/quantity"
                    android:textSize="@dimen/_13sdp"
                    android:layout_gravity="center|left" />

                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_weight=".3"
                    android:layout_height="@dimen/_30sdp"
                    app:cardCornerRadius="@dimen/_10sdp">

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:weightSum="3"
                        android:layout_height="@dimen/_35sdp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:id="@+id/dec"
                            android:text="-"
                            android:textSize="@dimen/_20sdp"
                            android:gravity="center"
                            android:textColor="@android:color/black" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:text="1"
                            android:id="@+id/quantity"
                            android:textSize="@dimen/_13sdp"
                            android:gravity="center" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:text="+"
                            android:id="@+id/inc"
                            android:textSize="@dimen/_20sdp"
                            android:gravity="center"
                            android:textColor="@android:color/black" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:src="#d3d3d3"
                android:layout_marginTop="@dimen/_10sdp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:weightSum="1"
                android:orientation="horizontal">

                <TextView
                    android:layout_weight=".5"
                    android:layout_width="0dp"
                    android:text="@string/total"
                    android:textSize="@dimen/_16sdp"
                    android:textColor="@color/f_color"
                    android:gravity="center|left"
                    android:paddingLeft="@dimen/_5sdp"
                    android:layout_height="match_parent" />

                <TextView
                    android:layout_weight=".5"
                    android:layout_width="0dp"
                    android:text="88 EGP"
                    android:id="@+id/totalPrice"
                    android:textSize="@dimen/_16sdp"
                    android:textColor="@color/f_color"
                    android:gravity="center|right"
                    android:paddingRight="@dimen/_5sdp"
                    android:layout_height="match_parent" />
            </LinearLayout>


        </LinearLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/_280sdp"
            android:layout_alignParentBottom="true"
            android:background="@drawable/splash" />

        <androidx.cardview.widget.CardView
            android:layout_marginRight="@dimen/_30sdp"
            android:layout_marginLeft="@dimen/_30sdp"
            android:layout_width="match_parent"
            app:cardCornerRadius="@dimen/_10sdp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/_270sdp"
            android:layout_height="@dimen/_120sdp">

            <androidx.viewpager.widget.ViewPager
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/view_pager" />

        </androidx.cardview.widget.CardView>


    </RelativeLayout>
</layout>